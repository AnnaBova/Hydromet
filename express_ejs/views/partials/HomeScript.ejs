<script type="text/javascript">
    var background;
    var date = new Date();
    var mounth = date.getMonth();
    if(mounth < 2 || mounth == 11)
        background = "winter"
    else if (mounth < 5)
        background = "spring"
    else if (mounth < 8)
        background = "summer"
    else    
        background = "autumn"
    document.getElementById("backgroundTop").style.backgroundImage = "url(http://77.120.123.202:3001/public/assets/images/" + background + '.jpg)';
    document.getElementById("backgroundDown").style.backgroundImage = "url(http://77.120.123.202:3001/public/assets/images/" + background + '2.jpg)'
</script>